<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityDetailsActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CityDetailsActivity">

        <ImageView
            android:id="@+id/imageViewCity"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tokyo"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/textViewCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_below="@id/imageViewCity"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="City Name"/>

        <TextView
            android:id="@+id/textViewAdvice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewCityName"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_bg"
            android:padding="8dp"
            android:text="Advice"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textViewLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewAdvice"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_bg"
            android:padding="8dp"
            android:text="Language"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textViewBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewLanguage"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_bg"
            android:padding="8dp"
            android:text="Budget"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textViewPopulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewBudget"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_bg"
            android:padding="8dp"
            android:text="Population"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textViewAttractionsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPopulation"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_bg"
            android:padding="8dp"
            android:text="Attractions"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/textViewFoodList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewAttractionsList"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border_bg"
            android:padding="8dp"
            android:text="Food"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btnWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/textViewFoodList"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Check Weather" />

        <Button
            android:id="@+id/buttonShowMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Show Map"
            android:layout_below="@id/btnWeather"
            android:layout_toEndOf="@id/btnWeather"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>
</ScrollView>
