<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/noMoreRecommendationsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No more recommendations now"
        android:visibility="gone"/>

    <!-- Button to navigate to AcceptedRequestsActivity -->
    <Button
        android:id="@+id/viewAcceptedRequestsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Accepted Requests"
        android:backgroundTint="@color/primaryColor" />
</LinearLayout>
